{% extends 'layout.html.twig' %}

{% block title %}Nouvel utilisateur{% endblock %}

{% block body %}
    <div class="card text-white bg-success mb-3" style="max-width: 18rem;">
        <div class="card-header">Nouvel utilisateur 👤</div>
        <div class="card-body">
            <img src="{{ asset('Images/verified-account.png')}}" width= "100px"/></br>
            <p class="card-text">L'utilisateur a bien été créé!</p>
        </div>
    </div>
    <a href="{{ path('utilisateur_add') }}"><button type="button" class="btn btn-outline-primary">➕ Créer une nouvel utilisateur</button></a>
    <a href="{{ path('utilisateur_list')}}"><button type="button" class="btn btn-outline-secondary">📝 Liste des utilisateurs</button></a>
{% endblock %}
