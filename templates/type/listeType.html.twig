{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des types <a href="{{path('typeController_type_add')}}"><img src="{{ asset('image/index.png') }}" /></a></h1>
    {% for types in liste_types %}
        <tr>
            <td> 
                <li> 
                    {{types.nom}}
                    <td> 
                        <a href="{{path('typeController_type_update',{id:types.id})}}"><img src="{{ asset('image/crayon.png') }}" /></a>
                    </td>
                    <td> 
                        <a href="{{path('typeController_type_delete',{id:types.id})}}"><img src="{{ asset('image/images.png') }}" /></a>
                    </td>
                </li> 
            </td>
        </tr>
    {% endfor %}
</div>
{% endblock %}
