            <br>
                <a href="{{ path('salle_update' , {id : salles[i].id}) }}"><button type="button" class="btn btn-outline-dark">Modifier</button></a>
                <a href="{{ path('salle_delete' , {id : salles[i].id}) }}"><button type="button" class="btn btn-outline-danger">Supprimer</button></a>
            </br>    
        </tr>
    </ul>
    {% endfor %}
    {% endif %}
{% endblock %}