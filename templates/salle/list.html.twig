{% extends 'layout.html.twig' %}

{% block title %}Liste des salles{% endblock %}

{% block body %}
    <h1>
        <p>Les salles de r√©servation</p><a href="{{ path('salle_add' ) }}"><button type="button" class="btn btn-outline-primary">Ajouter</button></a>
    </h1>
    {% if salles|length > 0 %}
    {% for i in 0..salles|length - 1 %}
    <ul>
        <tr>
            <br>
                Nom de la salle :{{salles[i].libelle }}
                <p></p>
