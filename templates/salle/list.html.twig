{% extends 'base.html.twig' %}

{% block title %}Salles!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif;}
</style>
<div class="example-wrapper">
    <h1>
        Les salles de r√©servation <a href="{{ path('salle_add' ) }}"><img src= "{{ asset('Images/index.png')}}" height="40"></a>
    </h1>
    {% if salles|length > 0 %}
    {% for i in 0..salles|length - 1 %}
    <ul>
        <tr>
            <br>
                Nom de la salle :{{salles[i].libelle }}
                <p></p>
                Nombre de place(s) :{{salles[i].nbPlaces}}
