            <br>
                <a href="{{ path('salle_update' , {id : salles[i].id}) }}"><img src= "{{ asset('Images/im.jpg')}}" height="30"></a>
                <a href="{{ path('salle_delete' , {id : salles[i].id}) }}"><img src= "{{ asset('Images/images.png')}}" height="30"></a>
            </br>    
        </tr>
    </ul>
    {% endfor %}
    {% endif %}
<pre>
    Revenir au menu <a href="{{ path('salle')}}"><img src= "{{ asset('Images/i2.jpg')}}" height="30"></a>
</pre>
</div>
{% endblock %}