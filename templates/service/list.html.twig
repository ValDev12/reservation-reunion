{% extends 'layout.html.twig' %}

{% block title %}Liste des services{% endblock %}

{% block body %}
    <h1>
        <p>Les services</p><a href="{{ path('service_add' ) }}"><button type="button" class="btn btn-outline-primary">Ajouter</button></a>
    </h1>
    {% if services|length > 0 %}
    {% for i in 0..services|length - 1 %}
    <ul>
        <tr>
            <br>
                Nom du service :{{services[i].nom }}
            </br>
            <br>
                <a href="{{ path('service_update' , {id : services[i].id}) }}"><button type="button" class="btn btn-outline-dark">Modifier</button></a>
                <a href="{{ path('service_delete' , {id : services[i].id}) }}"><button type="button" class="btn btn-outline-danger">Supprimer</button></a>
            </br>    
        </tr>
    </ul>
    {% endfor %}
    {% endif %}
{% endblock %}