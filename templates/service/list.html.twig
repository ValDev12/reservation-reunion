{% extends 'base.html.twig' %}

{% block title %}Services!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif;}
</style>
<div class="example-wrapper">
    <h1>
        Les services <a href="{{ path('service_add' ) }}"><img src= "{{ asset('Images/index.png')}}" height="40"></a>
    </h1>
    {% if services|length > 0 %}
    {% for i in 0..services|length - 1 %}
    <ul>
        <tr>
            <br>
                Nom du service :{{services[i].nom }}
            </br>
            <br>
                <a href="{{ path('service_update' , {id : services[i].id}) }}"><img src= "{{ asset('Images/im.jpg')}}" height="30"></a>
                <a href="{{ path('service_delete' , {id : services[i].id}) }}"><img src= "{{ asset('Images/images.png')}}" height="30"></a>
            </br>    
        </tr>
    </ul>
    {% endfor %}
    {% endif %}
<pre>
    Revenir au menu <a href="{{ path('service')}}"><img src= "{{ asset('Images/i2.jpg')}}" height="30"></a>
</pre>
</div>
{% endblock %}