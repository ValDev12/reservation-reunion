{% extends 'layout.html.twig' %}

{% block body %}
    <h1>
        {% if utilisateur != null %}
            Réservations <a href="{{ path('add_r', {id : utilisateur.getId()}) }}"><img src= "{{ asset('Images/index.png')}}" height="40"></a>
        {% endif %}
    </h1>
    {% if reservations|length > 0 %}
    {% for reservation in reservations %}
    <div class="card">
        <h5 class="card-header">{{reservation.getCreateur().getNom()}}</h5>
        <div class="card-body">
            <h5 class="card-title">Salle: {{reservation.getSalle().getLibelle()}}</h5>
            <p class="card-text">Réserver de {{reservation.getDateD|date("Y-m-d H:i:s")}} à {{reservation.getDateF|date("Y-m-d H:i:s")}}</p>
            <a href="{{ path('ResController_update' , {id : reservation.id}) }}"><button type="button" class="btn btn-warning">Modifier</button></a>
            <a href="{{ path('ResController_delete' , {id : reservation.id}) }}"><button type="button" class="btn btn-danger">Supprimer</button></a>
        </div>
    </div>
    </p>
    {% endfor %}
    {% endif %}
{% endblock %}