<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% block title %}Reservation{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('pagetest.css')}}" />
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    </head>
    <body>
        <div class="topbar">
        <a href="/"><img src="{{ asset('logo-gsb.png')}}" width= "100px"/></a>
        </div>

       <div class="menu">
            
            {% if app.user %}
                <a href="{{ path('app_logout') }}">DÉCONNEXION</a>
                <a> | </a>
                <a href="/">ACCUEIL</a>
                <a> | </a>
                <a href="{{ path('add_r', {id : app.user.id} ) }}">RÉSERVER</a>
                <a> | </a>
                <a href="{{ path('list_r')}}">CONSULTER</a>
                <a> | </a>
                <a href="{{ path('role_list')}}">ROLE</a>
                <a> | </a>
                <a href="{{ path('utilisateur_list')}}">UTILISATEUR</a>
                <a> | </a>
                <a href="{{ path('typeController_type_list')}}">TYPE</a>
                <a> | </a>
                <a href="{{ path('salle_list')}}">SALLE</a>
                <a> | </a>
                <a href="{{ path('service_list')}}">SERVICE</a>
                <a> | </a>
                <a href="{{ path('app_register')}}">INSCRIPTION</a>
            {% else %}
                <a href="{{ path('app_login')}}">CONNEXION</a>
            {% endif %}
    
        </div>

        

        <div class="contenu">
            {% if app.user or app.request.get('_route') == 'app_login' %}
                {% block body %}{% endblock %}
            {% else %}
                <img src="{{ asset('Images/padlock.png')}}" width= "100px"/>
                <p>Vous devez être connecté pour accéder au site.</p>
            {% endif %}
        </div>


        <div class="footer">
            <a>Application v.1</a>
        </div>
    </body>
</html>
